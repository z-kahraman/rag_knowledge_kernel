# OpenAI API Anahtarı (Ollama ile çalışırken gerekli değil)
# OPENAI_API_KEY=your-api-key-here

# LLM Sağlayıcı Tipi (ollama kullanıyoruz)
LLM_PROVIDER=ollama

# Kullanılacak OpenAI Modeli (OpenAI kullanılıyorsa)
# OPENAI_MODEL=gpt-3.5-turbo

# Ollama Yapılandırması
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Embedding Modeli Tipi (ollama kullanıyoruz)
EMBEDDING_PROVIDER=ollama

# OpenAI Embedding Modeli
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Ollama Embedding Modeli
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Instructor Embedding Modeli (Yerel)
# INSTRUCTOR_MODEL_NAME=hkunlp/instructor-large

# Vector DB Tipi (faiss kullanıyoruz)
VECTOR_DB=faiss

# Pinecone API Anahtarı (eğer Pinecone kullanılacaksa)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX=your-pinecone-index

# Uygulama Ayarları
CHUNK_SIZE=1000
CHUNK_OVERLAP=200 